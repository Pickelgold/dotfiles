@-moz-document url(about:newtab), url(about:home) {

    body {
         background-color: rgba(0,11,30,1) !important; 
    }

.logo {background-image: url("senko.png") !important;
	background-size: 275px !important;
	height:275px !important;
	width: 275px !important;}
.wordmark {background: url("chrome://branding/content/firefox-wordmark.svg") no-repeat center center;
    background-size: auto;
  background-size: 275px !important;
  -moz-context-properties: fill;
  display: inline-block;
  fill: var(--newtab-wordmark-color);
  height: 250px !important;
  margin-inline-start: 16px;
  width: 275px !important;
  fill: #00ff00 !important;
}
.outer-wrapper.only-search {
  display: block;
  padding-top: 140px !important;
}
.non-collapsible-section {
	padding: 0 0px !important;
}
.ds-outer-wrapper-breakpoint-override main {
	width: 575px !important;
}

body[lwt-newtab-brighttext] {
    --newtab-background-color: rgba(0,11,30,1) !important; 
    --newtab-wordmark-color: #00ff00 !important;
}
body::before {
    content: "" ;
    z-index: -1 ;
    position: fixed ;
    top: 0 ;
    left: 0 ;
